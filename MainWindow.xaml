<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

        <Grid>
            <TextBox Name="NomTextBox" Width="200" Height="30" Margin="10"/>
            <CheckBox Name="ActivarCampCheckbox" Content="Activar camp extra" 
       Margin="10,40,0,0" VerticalAlignment="Top" 
       Checked="ActivarCampCheckbox_Checked" 
       Unchecked="ActivarCampCheckbox_Unchecked"/>
            <TextBox Name="CampExtraTextBox" Width="200" Height="30" Margin="10,80,0,0" 
             Visibility="Collapsed"/>
        </Grid>

   
</Window>
